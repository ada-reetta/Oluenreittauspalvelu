SELECT Account.id, Account.name FROM Beer
    LEFT JOIN Task ON Task.account_id = Account.id
    WHERE (Task.done IS null OR Task.done = 1)
    GROUP BY Account.id
    HAVING COUNT(Task.id) = 0

